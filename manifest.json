{
  "manifest_version": 2,
  "name": "Borderify",
  "version": "1.0",

  "description": "Adds a red border to all webpages matching mozilla.org.",

  "icons": {
    "128": "icons/border-128.png"
  },

  "content_scripts": [
    {
      "matches": [
        "*://*.flatmates.com.au/*",
        "*://*.facebook.com/*"
      ],
      "js": ["contentScript.js"]
    }
  ]
}
